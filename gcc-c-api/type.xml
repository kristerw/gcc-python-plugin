  <type name="enumeral_type" base="type">
  </type>

  <type name="fixed_point_type" base="type">
    <attribute name="precision" kind="int">
      <doc>The precision of this type in bits (e.g. 32)</doc>
    </attribute>
  </type>

  <type name="function_type" base="type">
