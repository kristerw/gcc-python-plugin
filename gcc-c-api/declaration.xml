<api name="declaration">

  <doc>Declarations</doc>

  <type name="decl" base="tree">
    <attribute name="location" kind="location"/>
    <attribute name="is_artificial" kind="bool"/>
    <attribute name="is_builtin" kind="bool"/>
  </type>

  <type name="class_method_decl" base="decl">
  </type>

  <type name="const_decl" base="decl">
  </type>

  <type name="debug_expr_decl" base="decl">
  </type>

  <type name="field_decl" base="decl">
    <attribute name="offset" kind="int"/>
    <attribute name="bitoffset" kind="int"/>
  </type>

  <type name="function_decl" base="decl">
  </type>

  <type name="imported_decl" base="decl">
  </type>

  <type name="instance_method_decl" base="decl">
  </type>

  <type name="keyword_decl" base="decl">
  </type>

  <type name="label_decl" base="decl">
  </type>

  <type name="namespace_decl" base="decl">
  </type>

  <type name="parm_decl" base="decl">
  </type>

  <type name="property_decl" base="decl">
  </type>

  <type name="result_decl" base="decl">
  </type>

  <type name="template_decl" base="decl">
  </type>

  <type name="translation_unit_decl" base="decl">
    <attribute name="block" kind="block"/>
    <attribute name="language" kind="string"/>
  </type>

  <type name="type_decl" base="decl">
  </type>

  <type name="using_decl" base="decl">
  </type>

  <type name="var_decl" base="decl">
    <attribute name="initial" kind="constructor"/>
    <attribute name="is_static" kind="bool"/>
  </type>

  <iterator name="translation_unit_decl" kind="translation_unit_decl"/>

</api>
